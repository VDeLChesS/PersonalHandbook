{% extends 'base.html.twig' %}

{% block title %}SuggestedTasks{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/suggested_tasks.css') }}">
{% endblock %}

{% block javascipts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="d-flex justify-content-start align-content-center">
    <a href="{{ path('app_user_access') }}" style="margin: 5px 0 0 5px;"><svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-caret-left-square-fill" viewBox="0 0 16 16">
        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm10.5 10V4a.5.5 0 0 0-.832-.374l-4.5 4a.5.5 0 0 0 0 .748l4.5 4A.5.5 0 0 0 10.5 12"/></svg>
    </a>
</div>
<main class="flex-shrink-0">
    <h2 class="pb-2 border-bottom">SuggestedTasks</h2>
    <div class="row row-cols-1 row-cols-md-2 align-items-md-center g-3 py-3">
        <div class="d-flex flex-column">
            <img src="{{ suggested_task.picture }}" alt="{{ suggested_task.title }}" id="show_picture">
        </div>
        <div class="row">
            <h2 class="header">#{{ suggested_task.id }} /{{ suggested_task.title }} </h2>
            
            <p class="intro">Details{{ suggested_task.description }}</p>
            <hr>
            <span style="margin-bottom: 5px;">Type: {{ suggested_task.category ? suggested_task.category.name : '' }}</span>
            <a href="{{ path('suggested_tasks_edit', {'id': suggested_task.id}) }}" style="list-style: none;"><button class="btn btn-outline-warning">Edit</button></a>
        </div>
    </div>
    
    {{ include('suggested_tasks/_delete_form.html.twig') }}
</main>

    

    
{% endblock %}
